<div class="closet-top-bar">
  <h2>My Closet</h2>
  <%= link_to "Add Item", new_item_path, class: "button-primary" %>
</div>

<section class="closet-filter-section">
  <h2>Filter by Color</h2>
  <form class="closet-filter-form" action="/closet" method="get">
    <div>
      <label for="color_group">Select a color group</label>
      <select name="color_group" id="color_group">
        <option value="">No Filter</option>
        <% color_groups = ["Neutrals", "Blues", "Greens", "Warm Tones", "Pinks/Purples", "Metallics", "Other"] %>
        <% color_groups.each do |group| %>
          <option value="<%= group %>" <%= "selected" if params[:color_group] == group %>><%= group %></option>
        <% end %>
      </select>
    </div>

    <div>
      <button type="submit" class="closet-filter-button">Filter</button>
    </div>
  </form>
</section>

<% @items_grouped_by_category.each do |category, items| %>
  <h3 style="margin-top: 2rem;"><%= category.capitalize %></h3>
  <div class="item-grid">
    <% if items.empty? %>
      <div class="item-placeholder" style="grid-column: 1 / -1;">
        No items in this category yet.
      </div>
    <% else %>
      <% items.each do |item| %>
        <div class="item-card">
          <% if item.image.attached? %>
            <%= image_tag item.image, class: "item-image" %>
          <% else %>
            <div class="item-placeholder">No Image</div>
          <% end %>
          <h4 style="margin-top: 8px; font-size: 0.9rem;"><%= item.name %></h4>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>


