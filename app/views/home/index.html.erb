<style>
  html, body {
    height: 100%;
    margin: 0;
  }

  body {
    min-height: 100vh;
    background: #f7f3ef;
  }

  main {
    min-height: calc(100vh - 80px);
    background: #f7f3ef;
  }

  .page-content {
    min-height: 100vh;
    padding-bottom: 6rem;
  }

  .hero {
    margin-bottom: 2rem;
  }

  .hero h1 {
    font-size: 2.8rem;
    margin-bottom: 1rem;
  }

  .hero h3 {
    font-weight: 400;
    line-height: 1.5;
  }

  .center-text {
    text-align: center;
  }

  .how-it-works-wrapper {
    margin-top: 3rem;
    border: 2px solid #2f5d4a;
    border-radius: 22px;
    padding: 2rem;
    background: #f7f3ef;
  }

  .how-it-works-title {
    text-align: center;
    font-size: 2.2rem;
    margin-bottom: 2rem;
    font-weight: 600;
  }

  .steps {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .step-box {
    background: #7d9a6bff;
    border-radius: 18px;
    padding: 1rem;
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
  }

  .step-box,
  .step-box * {
    color: #f8f3ec !important;
  }

  .step-box strong {
    font-size: 1.2rem;
    display: block;
    margin-bottom: 0.5rem;
  }

  .step-box p {
    line-height: 1.6;
  }

  .action-buttons {
    text-align: center;
    margin-top: 2rem;
  }

  .button-primary {
    background: #2f5d4a;
    color: white;
    padding: 14px 28px;
    border-radius: 10px;
    font-weight: 600;
    text-decoration: none;
    margin: 0 10px;
    display: inline-block;
  }

  .button-primary:hover {
    background: #244a3b;
  }
</style>

<div class="page-content">

  <% unless user_signed_in? %>
  <div class="hero">
    <h1 class="center-text">Create Outfits Effortlessly</h1>

    <h3 class="center-text">
      Upload your wardrobe. Mix and match pieces.<br>
      Let your virtual closet help you style with ease.
    </h3>
  </div>
<% end %>


  <% if user_signed_in? %>
    <p class="center-text">
      Welcome, <%= current_user.name.presence || current_user.email %>!
    </p>

    <div class="action-buttons">
      <%= link_to "Add an Item", new_item_path, class: "button-primary" %>
      <%= link_to "View My Outfits", outfits_path, class: "button-primary" %>
    </div>
  <% end %>

  <% unless user_signed_in? %>
    <div class="how-it-works-wrapper">
      <div class="how-it-works-title">How It Works</div>

      <div class="steps">
        <div class="step-box">
          <strong>1. Upload Your Clothes</strong>
          <p>Add photos and details of items in your closet.</p>
        </div>

        <div class="step-box">
          <strong>2. Create Outfits</strong>
          <p>Mix and match pieces to build complete looks.</p>
        </div>

        <div class="step-box">
          <strong>3. Plan Your Style</strong>
          <p>Save outfits for events, seasons, or daily wear.</p>
        </div>
      </div>
    </div>
  <% end %>

</div>
