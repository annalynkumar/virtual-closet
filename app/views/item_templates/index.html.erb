<div class="new-item-container">
  <h1 class="new-item-title">Add New Item</h1>

  <%= form_with model: @item, url: "/insert_item", local: true, multipart: true do |form| %>
    <div class="form-group">
      <label>Name:</label>
      <%= form.text_field :name, class: "form-control", placeholder: "White shirt" %>
    </div>

   
    <div class="form-group">
      <label>Category:</label>
      <%= form.select :category,
            ["Top", "Pant", "Skirt", "Dress", "Outerwear", "Shoes", "Accessories"],
            {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Color:</label>
      <%= form.select :color,
            {
              "Neutrals" => ["White", "Black", "Gray", "Beige", "Brown", "Cream", "Tan", "Khaki"],
              "Blues"    => ["Navy", "Blue", "Light Blue"],
              "Pinks"    => ["Pink", "Blush"],
              "Reds"     => ["Red", "Maroon", "Burgundy"],
              "Greens"   => ["Olive", "Green", "Sage", "Teal"],
              "Yellows"  => ["Yellow", "Mustard"],
              "Purples"  => ["Purple", "Lavender"],
              "Oranges"  => ["Orange", "Rust"],
              "Other"    => ["Multicolor", "Pattern", "Other"]
            },
            {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Upload Image:</label>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <%= form.submit "Add Item", class: "submit-button" %>
  <% end %>
</div>

<div class="closet-button-container">
  <%= link_to "Take me to my closet", closet_path, class: "button-primary" %>
</div>
