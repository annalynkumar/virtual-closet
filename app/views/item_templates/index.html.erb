<h1 class="new-item-title">Add a New Item</h1>

<div class="new-item-container">
  <%= form_with model: @item, url: "/insert_item", multipart: true do |form| %>

    <div class="form-group">
      <label>Name</label>
      <%= form.text_field :name, class: "form-control", placeholder: "e.g. White shirt", required: true %>
    </div>

    <div class="form-group">
      <label>Category</label>
      <%= form.select :category,
            ["Tops", "Pants", "Skirts", "Dresses", "Outerwear", "Shoes", "Accessories"],
            {},
            class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Color</label>
      <%= form.select :color,
            {
              "Neutrals"       => ["White", "Black", "Gray", "Beige", "Brown", "Cream", "Tan", "Khaki"],
              "Blues"          => ["Navy", "Blue", "Light Blue", "Teal", "Turquoise"],
              "Greens"         => ["Green", "Olive", "Dark Green", "Mint"],
              "Warm Tones"     => ["Yellow", "Mustard", "Orange", "Rust", "Red", "Burgundy"],
              "Pinks/Purples"  => ["Pink", "Blush", "Hot Pink", "Purple", "Lavender"],
              "Metallics"      => ["Gold", "Silver"],
              "Other"          => ["Multicolor", "Patterned"]
            },
            {},
            class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Upload Image</label>
      <%= form.file_field :image_file, class: "form-control" %>
    </div>

    <div class="form-group" style="text-align: center;">
      <%= form.submit "Create Item", class: "submit-button" %>
    </div>

  <% end %>
</div>


<div class="closet-button-container">
  <%= button_to "Take me to my closet", closet_path, class: "submit-button", method: :get %>
</div>
