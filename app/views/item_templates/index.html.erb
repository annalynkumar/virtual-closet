<h1>Add a New Item</h1>

<div style="max-width: 700px; margin: 0 auto;">

  <%= form_with model: @item, url: "/insert_item", multipart: true do |form| %>

    <div style="margin-bottom: 1rem;">
      <label>Name:</label>
      <%= form.text_field :name, class: "form-control", placeholder: "White shirt" %>
    </div>

   <div style="margin-bottom: 1rem;">
      <label>Category:</label>
      <%= form.select :category,
                      ["Top", "Pant", "Skirt", "Dress", "Outerwear", "Shoes", "Accessories"],
                      {},
                      class: "form-control" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <label>Color:</label>
      <%= form.select :color,
            {
              "Neutrals"       => ["White", "Black", "Gray", "Beige", "Brown", "Cream", "Tan", "Khaki"],
              "Blues"          => ["Navy", "Blue", "Light Blue", "Teal", "Turquoise"],
              "Greens"         => ["Green", "Olive", "Dark Green", "Mint"],
              "Warm Tones"     => ["Yellow", "Mustard", "Orange", "Rust", "Red", "Burgundy"],
              "Pinks/Purples"  => ["Pink", "Blush", "Hot Pink", "Purple", "Lavender"],
              "Metallics"      => ["Gold", "Silver"],
              "Other"          => ["Multicolor", "Patterned"]
            },
            {},
            class: "form-control" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <label>Upload Image:</label>
      <%= form.file_field :image_file, class: "form-control" %>
    </div>

    <%= form.submit "Create Item", class: "button-primary" %>

  <% end %>



</div>



<article>
  <ul>
    <% @list_of_items.each do |an_item| %>
  <li>
    <a href="/items/<%= an_item.name %>">
      <%= an_item.name %>
    </a>
  </li>
<% end %>

  </ul>
</article>
<hr>
