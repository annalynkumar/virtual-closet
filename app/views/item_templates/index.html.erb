<h1>
  Add an item
</h1>

<hr>

<article>
  <header>
    <h2>
      Add a new item
    </h2>
  </header>

  <form action="/insert_item" method="post">
    <div>
      <label for="name_box">
        Name
      </label>

      <input type="text" id="name_box" name="query_name">
    </div>

    <div>
      <label for="category_box">
        Category
      </label>

      <input type="text" id="category_box" name="query_category">
    </div>

    <div>
      <label for="color_box">
        Color
      </label>

      <input type="text" id="color_box" name="query_color">
    </div>

    <div>
      <label for="image_url_box">
        Image url
      </label>

      <input type="text" id="image_url_box" name="query_image_url">
    </div>

    <div>
      <label for="user_id_box">
        User
      </label>

      <input type="text" id="user_id_box" name="query_user_id">
    </div>

    <button type="submit">
      Create item
    </button>
  </form>
</article>

<hr>

<article>
  <ul>
    <% @list_of_items.each do |an_item| %>
      <li>
        <a href="/items/<%= an_item.id %>">
          Item #<%= an_item.id %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<hr>
