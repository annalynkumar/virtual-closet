<div class="new-item-container">
  <h1 class="new-item-title">Add New Item</h1>

  <%= form_with model: @item, url: "/insert_item", local: true, multipart: true do |form| %>
    <div class="form-group">
      <label>Name:</label>
      <%= form.text_field :name, class: "form-control", placeholder: "White shirt" %>
    </div>

   
    <div class="form-group">
      <label>Category:</label>
      <%= form.select :category,
            ["Tops", "Pants", "Skirts", "Dresses", "Outerwear", "Shoes", "Accessories"],
            {}, class: "form-control" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <label>Color:</label>
      <%= form.select :color,
            {
              "Neutrals"       => ["White", "Black", "Gray", "Beige", "Brown", "Cream", "Tan", "Khaki"],
              "Blues"          => ["Navy", "Blue", "Light Blue", "Teal", "Turquoise"],
              "Greens"         => ["Green", "Olive", "Dark Green", "Mint"],
              "Warm Tones"     => ["Yellow", "Mustard", "Orange", "Rust", "Red", "Burgundy"],
              "Pinks/Purples"  => ["Pink", "Blush", "Hot Pink", "Purple", "Lavender"],
              "Metallics"      => ["Gold", "Silver"],
              "Other"          => ["Multicolor", "Patterned"]
            },
            {},
            class: "form-control" %>
    </div>


    <div class="form-group">
      <label>Upload Image:</label>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <%= form.submit "Add Item", class: "submit-button" %>
  <% end %>
</div>

<div class="closet-button-container">
  <%= link_to "Take me to my closet", closet_path, class: "button-primary" %>
</div>
