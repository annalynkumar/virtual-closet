<h1 style="text-align: center;"><%= @item.name %></h1>

<div style="max-width: 600px; margin: 2rem auto; background: #fff; border: 1px solid #ccc; border-radius: 10px; padding: 2rem; box-shadow: 0 4px 8px rgba(0,0,0,0.05);">

  <% if @item.image.attached? %>
    <div style="text-align: center; margin-bottom: 1.5rem;">
      <%= image_tag @item.image, style: "max-width: 100%;" %>
    </div>
  <% end %>

  <p><strong>Category:</strong> <%= @item.category %></p>
  <p><strong>Color:</strong> <%= @item.color %></p>

  <div style="margin-top: 2rem; text-align: center;">
    <%= link_to "Back to Items", items_path, style: "color: #3d6f63; text-decoration: underline; font-weight: bold;" %>
  </div>
</div>
