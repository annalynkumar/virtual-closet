<h1>
  List of all outfits
</h1>

<hr>

<article>
  <header>
    <h2>
      Add a new outfit
    </h2>
  </header>

  <form action="/insert_outfit" method="post">
    <div>
      <label for="name_box">
        Name
      </label>

      <input type="text" id="name_box" name="query_name">
    </div>

    <div>
      <label for="occasion_box">
        Occasion
      </label>

      <input type="text" id="occasion_box" name="query_occasion">
    </div>

    <div>
      <label for="season_box">
        Season
      </label>

      <input type="text" id="season_box" name="query_season">
    </div>

    <div>
      <label for="user_id_box">
        User
      </label>

      <input type="text" id="user_id_box" name="query_user_id">
    </div>

    <button type="submit">
      Create outfit
    </button>
  </form>
</article>

<hr>

<article>
  <ul>
    <% @list_of_outfits.each do |an_outfit| %>
      <li>
        <a href="/outfits/<%= an_outfit.id %>">
          Outfit #<%= an_outfit.id %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<hr>
