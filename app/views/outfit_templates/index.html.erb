<div class="closet-top-bar">
  <h2>My Outfits</h2>
  <%= link_to "Add an Outfit", new_outfit_path, class: "button-primary" %>
</div>

<div class="outfit-scroll-container">
  <% @list_of_outfits.each do |outfit| %>
    <div class="outfit-card">
      <h4><%= outfit.name %></h4>

      <p><strong>Occasion:</strong> <%= outfit.occasion.presence || "—" %></p>
      <p><strong>Season:</strong> <%= outfit.occasion.presence || "—" %></p>
      
      <p><strong>Items:</strong></p>
      <ul>
        <% outfit.items.each do |item| %>
          <li><%= item.name %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
