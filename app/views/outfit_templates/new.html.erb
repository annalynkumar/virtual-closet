<h1 class="page-title">My Outfits</h1>

<div class="outfits-grid">
  <% @outfits.each do |outfit| %>
    <div class="outfit-card">
      <h2><%= outfit.name %></h2>
      <p><strong>Occasion:</strong> <%= outfit.occasion %></p>
      <p><strong>Season:</strong> <%= outfit.try(:season) || "N/A" %></p>

      <div class="outfit-items-preview">
        <% outfit.items.each do |item| %>
          <div class="outfit-item">
            <% if item.image.present? %>
              <%= image_tag item.image.url, class: "outfit-item-image" %>
            <% else %>
              <div class="outfit-item-image no-image">No Image</div>
            <% end %>
            <div class="item-name"><%= item.name %></div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
